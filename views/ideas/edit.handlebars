{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
    
{{/each}}

<div class="card">
    <div class="card-body">
        <h3>Edit Video Idea</h3>
        <form action="/ideas/{{idea.id}}?_method=PUT" method="post" class="action">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="Title">Title</label>
                <input type="name" name="title" value="{{idea.title}}" class="form-control" id="title" aria-describedby="title" placeholder="Enter Title" required>
            </div>
            <div class="form-group">
                <label for="Details">Details</label>
                <textarea class="form-control" name="details" id="details" aria-describedby="details" placeholder="Enter Details" required>{{idea.details}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>